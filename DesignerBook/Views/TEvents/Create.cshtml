@model DesignerBook.Models.TEvent

@{
    ViewData["Title"] = "Створення події";
}

<h1>Створення події</h1>


   @{
    if (ViewBag.Id != null)
    {
        ViewData["Title"] = "Подія для " + ViewBag.PIB;
        <h4>
            Подія для @ViewBag.PIB
        </h4>
    }
    else
    {
        ViewData["Title"] = "Подія";
        <h4>Подія</h4>
    } 
 } 
  
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
             <div>
                <input type="hidden" asp-for="PersonId" value="@ViewBag.Id"></input>
            </div>
            <div class="form-group">
                <label asp-for="EventDateRegister" class="control-label"></label>
                <input type="hidden" asp-for="EventDateRegister" class="form-control" />
                <span asp-validation-for="EventDateRegister" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NextDateCommunication" class="control-label"></label>
                <input asp-for="NextDateCommunication" class="form-control" />
                <span asp-validation-for="NextDateCommunication" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутися до переліку подій</a>
    <a asp-controller="TEvents" asp-action="Index" asp-route-Id="model.Id"></a>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
