@model IEnumerable<DesignerBook.ViewModels.PersonsWithEvents>

@{
    ViewData["Title"] = "Index2";
}

<h1>Index2</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
                @Html.DisplayNameFor(model => model.PersonsList.FirstOrDefault().Id)
        </th>
        <th>
                @Html.DisplayNameFor(model => model.EventsList.FirstOrDefault().EventDateRegister)
        </th>
        <th>
                @Html.DisplayNameFor(model => model.EventsList.FirstOrDefault().NextDateCommunication)
        </th>
        <th>
                @Html.DisplayNameFor(model => model.EventsList.FirstOrDefault().Comment)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @{
                string? branchName = @Model.GetEnumerator().Current.PersonsList
                    .Where(b => b.Id == item.EventsList.GetEnumerator().Current.PersonId)
                    .FirstOrDefault().ToString();
            }
            @Html.DisplayFor(modelItem => branchName)
        </td>
        <td>
                    @Html.DisplayFor(modelItem => item.EventsList.FirstOrDefault().EventDateRegister)
        </td>
        <td>
                    @Html.DisplayFor(modelItem => item.EventsList.FirstOrDefault().NextDateCommunication)
        </td>
        <td>
                    @Html.DisplayFor(modelItem => item.EventsList.FirstOrDefault().Comment)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>
